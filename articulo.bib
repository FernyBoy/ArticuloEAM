@article{hernandezRememberingCIFAR10Images2026,
  title = {Remembering {{CIFAR-10}} Images with the Entropic Associative Memory},
  author = {Hern{\'a}ndez, No{\'e} and Morales, Rafael and Pineda, Luis A.},
